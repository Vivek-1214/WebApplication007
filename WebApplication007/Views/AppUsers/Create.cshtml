@using WebApplication007.Models;
@model AppUsersCreateVM

<html>
    <head>
        <title>@ViewBag.title</title>
 
    </head>
    <body>
    <form asp-controller="AppUsers" asp-action="Create" method="post">

        <div class="form-row">

            <div class="form-group col-md-6">
                <label asp-for="Email">Email</label>
                <input type="email" class="form-control" asp-for="Email">
                <span asp-validation-for="Email"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Password">Password</label>
                <input type="text" class="form-control" asp-for="Password">
                <span asp-validation-for="Password"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                <input type="text" class="form-control" asp-for="ConfirmPassword">
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName">FirstName</label>
                <input type="text" class="form-control"  asp-for="FirstName">
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">LastName</label>
                <input type="text" class="form-control"  asp-for="LastName">
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="MobileNo">MobileNo</label>
                <input type="text" class="form-control" asp-for="MobileNo">
              
            </div>

            <div class="form-group">
                <label asp-for="GenderId">GenderId</label>
                <select id="inputState" class="form-control" asp-for="GenderId">
                    <option value=" ">-Select Gender-</option>
                  @{
                        foreach (var G in ViewBag.GList)
                        {

                            <option value="@G.Id">@G.Text</option>
                        }
                    }  
               </select>
                <span asp-validation-for="GenderId"></span>
        </div>
 </div>

  <button type="submit" class="btn btn-primary">Create</button>
    </form>
  </body>
</html>


